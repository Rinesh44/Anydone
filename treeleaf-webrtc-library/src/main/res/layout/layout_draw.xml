<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ClientActivity">

    <ImageView
        android:id="@+id/iv_captured_image"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <com.treeleaf.freedrawingdemo.freedrawing.util.TreeleafDrawPadView
        android:id="@+id/treeleaf_draw_pad"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="visible" />

    <com.treeleaf.freedrawingdemo.freedrawing.util.ForwardTouchesView
        android:id="@+id/forward_touch"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <ImageView
        android:id="@+id/fab_discard_draw"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_margin="10dp"
        android:foreground="?selectableItemBackground"
        android:padding="6dp"
        android:src="@drawable/ic_close_icon" />

</FrameLayout>