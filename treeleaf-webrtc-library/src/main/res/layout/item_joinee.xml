<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_centerHorizontal="true"
    android:layout_centerVertical="true"
    android:layout_margin="4dp">

    <ImageView
        android:id="@+id/iv_joinee"
        android:layout_width="29dp"
        android:layout_height="29dp"
        android:scaleType="centerCrop"
        android:src="@drawable/ic_empty_profile_holder_icon" />

    <FrameLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <FrameLayout
            android:id="@+id/fl_draw_mode"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/circle_background"
            android:padding="15dp"
            android:visibility="visible" />

        <ImageView
            android:id="@+id/iv_current_drawer"
            android:layout_width="9dp"
            android:layout_height="9dp"
            android:layout_gravity="top|right"
            android:layout_marginTop="1dp"
            android:src="@drawable/ic_drawing_icon" />

    </FrameLayout>

    <TextView
        android:id="@+id/tv_count_additional_joinees"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:layout_gravity="center"
        android:textColor="@color/color_white"
        android:textSize="14sp"
        android:textStyle="bold"
        android:visibility="gone" />

    <View
        android:id="@+id/view_current_color"
        android:layout_width="20dp"
        android:layout_height="2dp"
        android:layout_below="@+id/iv_joinee"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="4dp"
        android:layout_marginTop="2dp"
        android:layout_marginRight="4dp"
        android:background="@color/color_green" />

</RelativeLayout>
