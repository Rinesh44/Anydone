<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorGrey">

    <androidx.cardview.widget.CardView
        android:id="@+id/myCardView"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="188dp"
        android:layout_marginBottom="30dp"
        app:cardCornerRadius="50dp">

        <ImageView
            android:id="@+id/iv_callee_profile"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_centerHorizontal="true"
            android:scaleType="centerCrop"
            android:src="@drawable/ic_empty_profile_holder_icon" />

    </androidx.cardview.widget.CardView>

    <TextView
        android:id="@+id/tv_callee_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/myCardView"
        android:layout_centerHorizontal="true"
        android:gravity="center_horizontal"
        android:text="John Cena"
        android:textColor="@color/color_white"
        android:textSize="24sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/tv_is_calling"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_callee_name"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:text="is calling"
        android:textColor="@color/color_white"
        android:textSize="20sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/tv_connecting"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_callee_name"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:text="Connecting..."
        android:textColor="@color/color_white"
        android:textSize="20sp"
        android:textStyle="bold"
        android:visibility="gone" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/cl_call_accept_options"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="70dp">

        <ImageView
            android:id="@+id/iv_terminate_call"
            android:layout_width="64dp"
            android:layout_height="64dp"
            android:layout_marginRight="40dp"
            android:foreground="?selectableItemBackground"
            android:padding="6dp"
            android:src="@drawable/ic_end_call"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/iv_accept_call"
            app:layout_constraintHorizontal_chainStyle="packed"
            app:layout_constraintStart_toStartOf="parent" />

        <ImageView
            android:id="@+id/iv_accept_call"
            android:layout_width="64dp"
            android:layout_height="64dp"
            android:foreground="?selectableItemBackground"
            android:padding="6dp"
            android:src="@drawable/ic_video_call_accept"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/iv_terminate_call" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</RelativeLayout>