<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_margin="5dp">

    <FrameLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/iv_picture"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:scaleType="centerCrop"
            android:src="@drawable/ic_empty_profile_holder_icon" />

        <FrameLayout
            android:id="@+id/fl_draw_mode"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/circle_background_white"
            android:padding="20dp" />

        <ImageView
            android:id="@+id/iv_picture_notification"
            android:layout_width="9dp"
            android:layout_height="9dp"
            android:layout_gravity="top|right"
            android:layout_marginTop="3dp"
            android:src="@drawable/circle_background_red"
            android:visibility="visible" />

        <TextView
            android:id="@+id/tv_draw_notification"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="top|right"
            android:layout_marginTop="0dp"
            android:src="@drawable/circle_background_red"
            android:text="999"
            android:textColor="@color/color_white"
            android:textSize="12sp" />

    </FrameLayout>

    <TextView
        android:id="@+id/tv_picture_id"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:text="1"
        android:textColor="@color/color_black"
        android:textSize="18sp"
        android:textStyle="bold"
        android:visibility="gone" />

</RelativeLayout>