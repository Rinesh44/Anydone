<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/rl_timezone_holder"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_centerVertical="true"
    android:background="?android:selectableItemBackground"
    android:clickable="true"
    android:focusable="true"
    android:paddingStart="@dimen/dimens_2x"
    android:paddingTop="@dimen/dimen_10x1"
    android:paddingEnd="@dimen/dimen_10x1"
    android:paddingBottom="@dimen/dimen_10x1">

    <ImageView
        android:id="@+id/iv_flag"
        android:layout_width="@dimen/dimen_10x4"
        android:layout_height="@dimen/dimen_10x4"
        android:layout_centerVertical="true"
        android:layout_marginEnd="@dimen/dimens_2x"
        android:src="@drawable/flag_nepal" />

    <TextView
        android:id="@+id/tv_code"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@+id/iv_flag"
        android:text="USD"
        android:textColor="@color/black"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/tv_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_code"
        android:layout_toEndOf="@+id/iv_flag"
        android:text="United states dollar" />


</RelativeLayout>