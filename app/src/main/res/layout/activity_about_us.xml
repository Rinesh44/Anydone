        <TextView
            android:id="@+id/tv_desc"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/iv_icon"
            android:layout_gravity="center"
            android:layout_marginTop="@dimen/dimen_10x4"
            android:text="@string/anydone_desc"
            android:textColor="@color/black" />

        <TextView
            android:id="@+id/tv_privacy"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_desc"
            android:layout_centerHorizontal="true"
            android:layout_gravity="center"
            android:layout_marginTop="@dimen/dimen_10x4"
            android:text="Privacy Policy"
            android:textColor="@color/colorPrimary"
            android:textSize="@dimen/material_text_body2"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tv_terms_n_conditions"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_privacy"
            android:layout_centerHorizontal="true"
            android:layout_gravity="center"
            android:layout_marginTop="@dimen/dimen_10x1"
            android:text="Terms and Conditions"
            android:textColor="@color/colorPrimary"
            android:textSize="@dimen/material_text_body2"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tv_open_src_library"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_terms_n_conditions"
            android:layout_centerHorizontal="true"
            android:layout_gravity="center"
            android:layout_marginTop="@dimen/dimen_10x1"
            android:text="Open source libraries"
            android:textColor="@color/colorPrimary"
            android:textSize="@dimen/material_text_body2"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tv_follow"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_open_src_library"
            android:layout_centerHorizontal="true"
            android:layout_gravity="center"
            android:layout_marginTop="@dimen/dimen_10x2"
            android:text="Follow us at"
            android:textColor="@color/black"
            android:textSize="@dimen/material_text_subhead"
            android:textStyle="bold" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_follow"
            android:gravity="center"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/iv_facebook"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/dimens_2x"
                android:src="@drawable/ic_facebook" />

            <!-- <ImageView
