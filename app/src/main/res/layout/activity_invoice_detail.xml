<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/dimens_2x">

        <LinearLayout
            android:id="@+id/ll_initial_detail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/iv_logo"
                android:layout_width="@dimen/dimen_10x6"
                android:layout_height="@dimen/dimen_10x6"
                android:src="@drawable/logo_mark_text" />

            <TextView
                android:id="@+id/tv_company_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dimen_10x2"
                android:text="Anydone Pvt.Ltd"
                android:textColor="@color/charcoal_text" />

            <TextView
                android:id="@+id/tv_company_address1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Sankhamul-11 Chakupat"
                android:textColor="@color/charcoal_text" />

            <TextView
                android:id="@+id/tv_company_address2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Lalitpur, Nepal"
                android:textColor="@color/charcoal_text" />


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dimen_10x2"
                android:fontFamily="@font/bold"
                android:text="Bill To"
                android:textColor="@color/colorPrimary" />

            <TextView
                android:id="@+id/tv_billed_to_person"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Rinesh Shakya"
                android:textColor="@color/charcoal_text" />

            <TextView
                android:id="@+id/tv_billed_to_place"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="BJ Complex Pvt. Ltd"
                android:textColor="@color/charcoal_text" />

            <TextView
                android:id="@+id/tv_billed_to_address1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Nayabazar, Sorakhutte"
                android:textColor="@color/charcoal_text" />

            <TextView
                android:id="@+id/tv_billed_to_address2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Kathmandu, Nepal"
                android:textColor="@color/charcoal_text" />

        </LinearLayout>

        <RelativeLayout
            android:id="@+id/rl_details"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/ll_initial_detail"
            android:layout_marginTop="@dimen/dimen_10x2">

            <TextView
                android:id="@+id/tv_detail_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/bold"
                android:text="Details"
                android:textColor="@color/colorPrimary" />

            <View
                android:id="@+id/v_details"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_below="@+id/tv_detail_title"
                android:layout_marginTop="@dimen/dimen_5x1"
                android:background="#A5A5A5" />

            <TextView
                android:id="@+id/tv_invoice_id_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/v_details"
                android:layout_marginTop="@dimen/dimen_5x1"
                android:text="Invoice Id"
                android:textColor="@color/service_info_text_color" />

            <TextView
                android:id="@+id/tv_invoice_id"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tv_invoice_id_title"
                android:text="23452"
                android:textColor="@color/charcoal_text"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tv_billing_reason_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tv_invoice_id"
                android:layout_marginTop="@dimen/dimen_10x1"
                android:text="Billing Reason" />

            <TextView
                android:id="@+id/tv_billing_reason"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tv_billing_reason_title"
                android:text="Standard"
                android:textColor="@color/charcoal_text"
                android:textStyle="bold" />


            <TextView
                android:id="@+id/tv_payment_method_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tv_billing_reason"
                android:layout_marginTop="@dimen/dimen_10x1"
                android:text="Payment Method" />

            <TextView
                android:id="@+id/tv_payment_method"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tv_payment_method_title"
                android:text="**** 8895"
                android:textColor="@color/charcoal_text"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tv_transaction_date_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/v_details"
                android:layout_alignParentEnd="true"
                android:layout_marginTop="@dimen/dimen_5x1"
                android:text="Transaction Date"
                android:textColor="@color/service_info_text_color" />

            <TextView
                android:id="@+id/tv_transaction_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tv_transaction_date_title"
                android:layout_alignParentEnd="true"
                android:text="**** 8895"
                android:textColor="@color/charcoal_text"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tv_transaction_id_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/tv_transaction_date"
                android:layout_alignParentEnd="true"
                android:layout_marginTop="@dimen/dimen_10x1"
                android:text="Transaction Id"
                android:textColor="@color/service_info_text_color" />

            <TextView
                android:id="@+id/tv_transaction_id"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tv_transaction_id_title"
                android:layout_alignParentEnd="true"
                android:text="23452"
                android:textColor="@color/charcoal_text"
                android:textStyle="bold" />

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/rl_amount"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/rl_details"
            android:layout_marginTop="@dimen/dimen_10x2">

            <TextView
                android:id="@+id/tv_amount_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/bold"
                android:text="Amount"
                android:textColor="@color/colorPrimary" />

            <View
                android:id="@+id/v_amount"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_below="@+id/tv_amount_title"
                android:layout_marginTop="@dimen/dimen_5x1"
                android:background="#A5A5A5" />

            <TextView
                android:id="@+id/tv_subtotal_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/v_amount"
                android:layout_marginTop="@dimen/dimen_5x1"
                android:text="Subtotal"
                android:textColor="@color/charcoal_text"
                android:textStyle="bold" />


            <TextView
                android:id="@+id/tv_subtotal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/v_amount"
                android:layout_alignParentEnd="true"
                android:layout_marginTop="@dimen/dimen_5x1"
                android:fontFamily="@font/bold"
                android:text="$60"
                android:textColor="@color/charcoal_text"
                android:textSize="16sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tv_tax_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tv_subtotal"
                android:layout_marginTop="@dimen/dimen_5x1"
                android:text="Tax"
                android:textColor="@color/charcoal_text"
                android:textStyle="bold" />


            <TextView
                android:id="@+id/tv_tax"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tv_subtotal"
                android:layout_alignParentEnd="true"
                android:layout_marginTop="@dimen/dimen_5x1"
                android:fontFamily="@font/bold"
                android:text="$0.00"
                android:textColor="@color/charcoal_text"
                android:textSize="16sp"
                android:textStyle="bold" />

            <View
                android:id="@+id/v_amount2"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_below="@+id/tv_tax"
                android:layout_marginTop="@dimen/dimen_10x1"
                android:background="#A5A5A5" />


            <TextView
                android:id="@+id/tv_total_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/v_amount2"
                android:layout_marginTop="@dimen/dimen_5x1"
                android:text="Total"
                android:textColor="@color/charcoal_text"
                android:textStyle="bold" />


            <TextView
                android:id="@+id/tv_total"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/v_amount2"
                android:layout_alignParentEnd="true"
                android:layout_marginTop="@dimen/dimen_5x1"
                android:fontFamily="@font/bold"
                android:text="$60"
                android:textColor="@color/charcoal_text"
                android:textSize="16sp"
                android:textStyle="bold" />

        </RelativeLayout>

    </RelativeLayout>
</ScrollView>

