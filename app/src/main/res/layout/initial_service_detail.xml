<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginStart="@dimen/dimen_10x2"
    android:layout_marginTop="@dimen/dimen_10x2"
    android:layout_marginEnd="@dimen/dimen_10x2"
    android:layout_marginBottom="@dimen/dimen_10x1"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/iv_service_icon"
        android:layout_width="@dimen/dimens_11x"
        android:layout_height="@dimen/dimens_11x"
        android:layout_gravity="center"
        android:src="@drawable/ic_plumber_icon" />

    <TextView
        android:id="@+id/tv_service_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_margin="@dimen/dimen_2x1"
        android:text="Plumbers"
        android:textColor="@color/black"
        android:textSize="@dimen/material_text_title"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/tv_problem_stat"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_margin="@dimen/dimen_6x1"
        android:text="my pipe is leaking"
        android:textColor="@color/black"
        android:textSize="@dimen/material_text_subhead" />

    <TextView
        android:id="@+id/tv_location"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_margin="@dimen/dimen_6x1"
        android:drawableStart="@drawable/ic_location_new_big"
        android:drawablePadding="@dimen/dimen_10x1"
        android:gravity="center_vertical"
        android:visibility="gone"
        android:text="Sanepa, lalitpur"
        android:textColor="#525252"
        android:textSize="@dimen/material_text_subhead" />

    <TextView
        android:id="@+id/tv_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_margin="@dimen/dimen_6x1"
        android:drawableStart="@drawable/ic_from_date_big"
        android:drawablePadding="@dimen/dimen_10x1"
        android:gravity="center_vertical"
        android:text="21 may 2020"
        android:textColor="#525252"
        android:textSize="@dimen/material_text_subhead" />

</LinearLayout>