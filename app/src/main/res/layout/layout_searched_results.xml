<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:id="@+id/rl_text_holder"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/dimens_2x">

        <TextView
            android:id="@+id/tv_sender_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="BIjay maharjan: "
            android:textColor="@color/black" />

        <TextView
            android:id="@+id/tv_msg"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toStartOf="@+id/tv_date"
            android:layout_toEndOf="@id/tv_sender_name"
            android:singleLine="true"
            android:text="got the message sdf sdfjsdsdfsdf"
            android:textColor="@color/service_info_text_color" />

        <TextView
            android:id="@+id/tv_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="@dimen/dimen_10x1"
            android:text="11:44 PM"
            android:textColor="@color/service_info_text_color" />

    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height=".8dp"
        android:layout_below="@+id/rl_text_holder"
        android:background="#E7E7E7" />


</RelativeLayout>