<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FAFAFA"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ScrollView
            android:id="@+id/scroll_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:fillViewport="true"
            android:scrollbars="none">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/dimen_10x1"
                    android:layout_marginTop="@dimen/dimen_10x1"
                    android:padding="@dimen/dimen_6x1">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:text="Enable Bot Reply"
                        android:textColor="@color/black"
                        android:textSize="@dimen/material_text_subhead"
                        android:textStyle="bold" />

                    <Switch
                        android:id="@+id/switch_bot_reply"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentEnd="true" />
                </RelativeLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="2dp"
                    android:layout_marginTop="@dimen/dimen_10x1"
                    android:background="#F0EDF1" />

                <LinearLayout
                    android:id="@+id/ll_customer"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:visibility="visible">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/dimen_10x1"
                        android:layout_marginTop="@dimen/dimen_10x1"
                        android:layout_marginEnd="@dimen/dimen_10x1"
                        android:padding="@dimen/dimens_1x">

                        <TextView
                            android:id="@+id/tv_customer_dropdown"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Customer Details"
                            android:textColor="@color/black"
                            android:textSize="@dimen/material_text_subhead"
                            android:textStyle="bold" />

                        <ImageView
                            android:id="@+id/iv_dropdown_customer"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentEnd="true"
                            android:layout_centerInParent="true"
                            android:src="@drawable/ic_dropdown_toggle" />

                    </RelativeLayout>

                    <net.cachapa.expandablelayout.ExpandableLayout
                        android:id="@+id/expandable_layout_customer"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:el_duration="500"
                        app:el_expanded="true"
                        app:el_parallax="0.5">

                        <LinearLayout
                            android:id="@+id/ll_customer_details"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/dimen_2x4"
                            android:layout_marginBottom="@dimen/dimen_10x1"
                            android:orientation="vertical">

                            <LinearLayout
                                android:id="@+id/ll_customer_name"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="@dimen/dimen_10x2"
                                android:layout_marginEnd="@dimen/dimen_10x2"
                                android:orientation="horizontal">

                                <de.hdodenhof.circleimageview.CircleImageView
                                    android:id="@+id/civ_customer"
                                    android:layout_width="22dp"
                                    android:layout_height="22dp"
                                    android:src="@drawable/ic_empty_profile_holder_icon" />

                                <TextView
                                    android:id="@+id/tv_customer_name"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center_vertical"
                                    android:layout_marginStart="@dimen/dimen_10x1"
                                    android:text="Ram prasad"
                                    android:textColor="@color/black" />

                            </LinearLayout>

                            <LinearLayout
                                android:id="@+id/ll_customer_phone"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="@dimen/dimen_10x2"
                                android:layout_marginTop="@dimen/dimens_2x"
                                android:layout_marginEnd="@dimen/dimen_10x2"
                                android:orientation="horizontal">

                                <ImageView
                                    android:id="@+id/iv_customer_phone"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:src="@drawable/ic_customer_phone" />

                                <TextView
                                    android:id="@+id/tv_customer_phone"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center_vertical"
                                    android:layout_marginStart="@dimen/dimen_10x1"
                                    android:text="9849948119"
                                    android:textColor="@color/black" />

                            </LinearLayout>

                            <LinearLayout
                                android:id="@+id/ll_customer_email"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="@dimen/dimen_10x2"
                                android:layout_marginTop="@dimen/dimens_2x"
                                android:layout_marginEnd="@dimen/dimen_10x2"
                                android:orientation="horizontal">

                                <ImageView
                                    android:id="@+id/iv_customer_email"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:src="@drawable/ic_customer_mail" />

                                <TextView
                                    android:id="@+id/tv_customer_email"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center_vertical"
                                    android:layout_marginStart="@dimen/dimen_10x1"
                                    android:text="bluescfc44@gmail.com"
                                    android:textColor="@color/black" />

                            </LinearLayout>


                        </LinearLayout>

                    </net.cachapa.expandablelayout.ExpandableLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="2dp"
                        android:layout_marginTop="@dimen/dimen_10x1"
                        android:background="#F0EDF1" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/ll_ticket_details"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/dimen_10x2"
                    android:layout_marginTop="@dimen/dimen_10x1"
                    android:layout_marginEnd="@dimen/dimen_2x4"
                    android:orientation="vertical">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="@dimen/dimen_10x1">

                        <TextView
                            android:id="@+id/tv_ticket_details_dropdown"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Ticket Details"
                            android:textColor="@color/black"
                            android:textSize="@dimen/material_text_subhead"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/tv_ticket_status"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginEnd="@dimen/dimen_10x1"
                            android:layout_toStartOf="@+id/iv_dropdown_ticket_details"
                            android:background="@drawable/started_bg"
                            android:paddingStart="@dimen/dimen_10x1"
                            android:paddingTop="@dimen/dimen_6x1"
                            android:paddingEnd="@dimen/dimen_10x1"
                            android:paddingBottom="@dimen/dimen_6x1"
                            android:text="Started"
                            android:textAllCaps="true"
                            android:textColor="#2F80ED"
                            android:textSize="10sp" />

                        <ImageView
                            android:id="@+id/iv_dropdown_ticket_details"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentEnd="true"
                            android:layout_centerInParent="true"
                            android:src="@drawable/ic_dropdown_toggle" />

                    </RelativeLayout>

                    <net.cachapa.expandablelayout.ExpandableLayout
                        android:id="@+id/expandable_layout_ticket_details"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:el_duration="500"
                        app:el_expanded="true"
                        app:el_parallax="0.5">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="@dimen/dimen_10x1"
                                android:text="Ticket Id"
                                android:textColor="@color/black"
                                android:textStyle="bold" />

                            <TextView
                                android:id="@+id/tv_ticket_id"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="@dimen/dimen_10x1"
                                android:text="1234"
                                android:textColor="@color/black" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="@dimen/dimen_10x1"
                                android:text="Created By"
                                android:textColor="@color/black"
                                android:textStyle="bold" />

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="@dimen/dimen_10x1"
                                android:orientation="horizontal">

                                <de.hdodenhof.circleimageview.CircleImageView
                                    android:id="@+id/civ_ticket_created_by"
                                    android:layout_width="22dp"
                                    android:layout_height="22dp"
                                    android:src="@drawable/ic_empty_profile_holder_icon" />

                                <TextView
                                    android:id="@+id/tv_ticket_created_by"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center"
                                    android:layout_marginStart="@dimen/dimen_10x1"
                                    android:text="John Legend"
                                    android:textColor="@color/black" />

                            </LinearLayout>

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="@dimen/dimen_10x1"
                                android:text="Created Date"
                                android:textColor="@color/black"
                                android:textStyle="bold" />

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="@dimen/dimen_10x1"
                                android:orientation="horizontal">

                                <ImageView
                                    android:id="@+id/civ_ticket_created_date"
                                    android:layout_width="22dp"
                                    android:layout_height="22dp"
                                    android:src="@drawable/ic_calendar_blue" />

                                <TextView
                                    android:id="@+id/tv_ticket_created_date"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center"
                                    android:layout_marginStart="@dimen/dimen_10x1"
                                    android:text="Nov 12, 2020"
                                    android:textColor="@color/black" />

                            </LinearLayout>

                            <TextView
                                android:id="@+id/tv_ticket_title"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="@dimen/dimen_10x1"
                                android:text="Broken tv fallen from stand"
                                android:textColor="@color/black"
                                android:textStyle="bold" />

                            <TextView
                                android:id="@+id/tv_ticket_desc"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="@dimen/dimen_10x1"
                                android:text="kjasdf alksdjf lajsdfl alskdjf lasdflkj asdflkj alsdflkjas dfljalskdjf "
                                android:textColor="@color/black" />

                            <LinearLayout
                                android:id="@+id/ll_tags"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="@dimen/dimen_10x1"
                                android:orientation="horizontal" />

                        </LinearLayout>
                    </net.cachapa.expandablelayout.ExpandableLayout>

                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="2dp"
                    android:layout_marginTop="@dimen/dimen_10x2"
                    android:background="#F0EDF1" />

                <LinearLayout
                    android:id="@+id/ll_assigned_employee"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:visibility="gone">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/dimen_10x1"
                        android:layout_marginTop="@dimen/dimen_10x1"
                        android:layout_marginEnd="@dimen/dimen_10x1"
                        android:padding="@dimen/dimens_1x">

                        <TextView
                            android:id="@+id/tv_assigned_employee_dropdown"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Assigned Employee"
                            android:textColor="@color/black"
                            android:textSize="@dimen/material_text_subhead"
                            android:textStyle="bold" />

                        <ImageView
                            android:id="@+id/iv_dropdown_employee"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentEnd="true"
                            android:layout_centerInParent="true"
                            android:src="@drawable/ic_dropdown_toggle" />

                    </RelativeLayout>

                    <net.cachapa.expandablelayout.ExpandableLayout
                        android:id="@+id/expandable_layout_employee"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:el_duration="500"
                        app:el_expanded="true"
                        app:el_parallax="0.5">

                        <LinearLayout
                            android:id="@+id/ll_assined_employee_top"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="@dimen/dimen_10x2"
                            android:layout_marginEnd="@dimen/dimen_10x1"
                            android:orientation="vertical" />

                    </net.cachapa.expandablelayout.ExpandableLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="2dp"
                        android:layout_marginTop="@dimen/dimen_10x1"
                        android:background="#F0EDF1" />
                </LinearLayout>

                <TextView
                    android:id="@+id/tv_assign_employee"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/dimen_10x2"
                    android:layout_marginTop="@dimen/dimen_10x1"
                    android:layout_marginBottom="@dimen/dimen_10x1"
                    android:drawableStart="@drawable/ic_assign_employee"
                    android:drawablePadding="@dimen/dimen_10x1"
                    android:gravity="center_vertical"
                    android:text="Assign Employee"
                    android:textColor="@color/colorPrimary" />

