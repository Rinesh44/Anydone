<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <ProgressBar
        android:id="@+id/pb_progress"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:elevation="@dimen/dimen_2x2"
        android:visibility="gone" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:background="@color/white"
        android:elevation="1dp"
        android:orientation="vertical"
        android:visibility="visible">

        <LinearLayout
            android:id="@+id/ll_status_options"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/dimen_10x1"
            android:layout_marginTop="@dimen/dimen_10x1"
            android:layout_marginEnd="@dimen/dimen_10x1"
            android:background="@drawable/et_rounded_active"
            android:clickable="true"
            android:elevation="1dp"
            android:focusable="true"
            android:orientation="vertical"
            android:visibility="gone">

            <TextView
                android:id="@+id/tv_resolve"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:padding="@dimen/dimen_2x2"
                android:text="resolve"
                android:textAllCaps="true"
                android:textColor="@color/colorPrimary"
                android:textSize="18sp"
                android:textStyle="bold" />

            <View
                android:id="@+id/v_separator"
                android:layout_width="match_parent"
                android:layout_height="1.5dp"
                android:layout_marginTop="@dimen/dimen_6x1"
                android:layout_marginBottom="@dimen/dimen_6x1"
                android:background="#F0EDF1"
                android:visibility="visible" />

            <TextView
                android:id="@+id/tv_close"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:padding="@dimen/dimen_2x2"
                android:text="close"
                android:textAllCaps="true"
                android:textColor="@color/colorPrimary"
                android:textSize="18sp"
                android:textStyle="bold"
                android:visibility="visible" />

            <View
                android:id="@+id/v_separator1"
                android:layout_width="match_parent"
                android:layout_height="1.5dp"
                android:layout_marginTop="@dimen/dimen_6x1"
                android:layout_marginBottom="@dimen/dimen_6x1"
                android:background="#F0EDF1"
                android:visibility="visible" />

            <TextView
                android:id="@+id/tv_reopen"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:padding="@dimen/dimen_2x2"
                android:text="re-open"
                android:textAllCaps="true"
                android:textColor="@color/colorPrimary"
                android:textSize="18sp"
                android:textStyle="bold" />

        </LinearLayout>

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btn_reopen"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dimen_10x6"
            android:layout_marginStart="@dimen/dimen_10x1"
            android:layout_marginEnd="@dimen/dimen_10x1"
            android:layout_marginBottom="@dimen/dimen_2x4"
            android:backgroundTint="@color/colorPrimary"
            android:text="Re-Open"
            android:textAllCaps="true"
            android:textStyle="bold"
            android:visibility="gone" />


        <RelativeLayout
            android:id="@+id/rl_selected_status"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:clickable="true"
            android:focusable="true"
            android:visibility="visible">

            <TextView
                android:id="@+id/tv_status_selected"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom"
                android:layout_margin="@dimen/dimen_10x1"
                android:background="@drawable/et_rounded_active"
                android:gravity="center"
                android:padding="12dp"
                android:text="started"
                android:textAllCaps="true"
                android:textColor="@color/colorPrimary"
                android:textSize="18sp"
                android:textStyle="bold" />

            <ImageView
                android:id="@+id/iv_dropdown_status"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_centerInParent="true"
                android:layout_marginEnd="@dimen/dimen_10x3"
                android:backgroundTint="@color/colorPrimary"
                android:src="@drawable/ic_drop_up_blue" />

        </RelativeLayout>

    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ScrollView
            android:id="@+id/scroll_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fillViewport="false"
            android:scrollbars="none">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <RelativeLayout
                    android:id="@+id/rl_bot_reply_holder"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dimen_10x1"
                    android:visibility="visible">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginStart="@dimen/dimen_10x2"
                        android:paddingBottom="@dimen/dimen_10x1"
                        android:text="Enable Bot Reply"
                        android:textColor="@color/charcoal_text"
                        android:textSize="@dimen/material_text_subhead"
                        android:textStyle="bold" />

                    <Switch
                        android:id="@+id/switch_bot_reply"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentEnd="true"
                        android:layout_marginEnd="@dimen/dimen_10x1" />

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="2dp"
                        android:layout_below="@+id/switch_bot_reply"
                        android:layout_marginTop="@dimen/dimen_10x1"
                        android:background="#F0EDF1" />
                </RelativeLayout>

                <LinearLayout
                    android:id="@+id/ll_ticket_details"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/dimen_10x2"
                    android:layout_marginTop="@dimen/dimen_2x4"
                    android:layout_marginEnd="@dimen/dimen_10x2"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">

                            <TextView
                                android:id="@+id/tv_ticket_id_title"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="@dimen/dimen_6x1"
                                android:text="Ticket Id"
                                android:textColor="@color/charcoal_text"
                                android:textSize="@dimen/material_text_subhead"
                                android:textStyle="bold" />

                            <TextView
                                android:id="@+id/tv_ticket_id"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_below="@+id/tv_ticket_id_title"
                                android:text="1234"
                                android:textColor="@color/black" />


                            <TextView
                                android:id="@+id/tv_ticket_status"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignParentEnd="true"
                                android:layout_marginTop="@dimen/dimen_2x4"
                                android:background="@drawable/started_bg"
                                android:paddingStart="@dimen/dimen_10x1"
                                android:paddingTop="@dimen/dimen_6x1"
                                android:paddingEnd="@dimen/dimen_10x1"
                                android:paddingBottom="@dimen/dimen_6x1"
                                android:text="Started"
                                android:textAllCaps="true"
                                android:textColor="#2F80ED"
                                android:textSize="10sp" />

                        </RelativeLayout>

                        <TextView
                            android:id="@+id/tv_ticket_title"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/dimens_2x"
                            android:text="Broken tv fallen from stand"
                            android:textColor="@color/charcoal_text"
                            android:textSize="@dimen/material_text_subhead"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/tv_ticket_desc"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/dimen_2x2"
                            android:text="kjasdf alksdjf lajsdfl alskdjf lasdflkj asdflkj alsdflkjas dfljalskdjf "
                            android:textColor="@color/black" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/dimen_10x2"
                            android:text="Priority"
                            android:textColor="@color/charcoal_text"
                            android:textSize="@dimen/material_text_subhead"
                            android:textStyle="bold" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/dimen_2x1"
                            android:orientation="horizontal">

                            <ImageView
                                android:id="@+id/iv_priority"
                                android:layout_width="22dp"
                                android:layout_height="22dp"
                                android:paddingTop="@dimen/dimen_2x1"
                                android:paddingBottom="@dimen/dimen_2x1"
                                android:src="@drawable/ic_medium_small" />

                            <TextView
                                android:id="@+id/tv_priority"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:layout_marginStart="@dimen/dimen_10x1"
                                android:text="Medium"
                                android:textColor="@color/black" />

                        </LinearLayout>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/dimen_10x2"
                            android:text="Service"
                            android:textColor="@color/charcoal_text"
                            android:textSize="@dimen/material_text_subhead"
                            android:textStyle="bold" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                            <ImageView
                                android:id="@+id/iv_service"
                                android:layout_width="22dp"
                                android:layout_height="22dp"
                                android:src="@drawable/ic_browse_service" />

                            <TextView
                                android:id="@+id/tv_service"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:layout_marginStart="@dimen/dimen_10x1"
                                android:text="Vianet"
                                android:textColor="@color/black" />

                        </LinearLayout>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/dimen_10x2"
                            android:text="Created By"
                            android:textColor="@color/charcoal_text"
                            android:textSize="@dimen/material_text_subhead"
                            android:textStyle="bold" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/dimen_2x1"
                            android:orientation="horizontal">

                            <de.hdodenhof.circleimageview.CircleImageView
                                android:id="@+id/civ_ticket_created_by"
                                android:layout_width="22dp"
                                android:layout_height="22dp"
                                android:src="@drawable/ic_user_placeholder" />

                            <TextView
                                android:id="@+id/tv_ticket_created_by"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:layout_marginStart="@dimen/dimen_10x1"
                                android:text="John Legend"
                                android:textColor="@color/black" />

                        </LinearLayout>

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/dimen_10x2"
                            android:text="Assigned Employee"
                            android:textColor="@color/charcoal_text"
                            android:textSize="@dimen/material_text_subhead"
                            android:textStyle="bold" />

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/dimen_2x1">

                            <de.hdodenhof.circleimageview.CircleImageView
                                android:id="@+id/civ_assigned_employee"
                                android:layout_width="22dp"
                                android:layout_height="22dp"
                                android:src="@drawable/ic_user_placeholder" />

                            <TextView
                                android:id="@+id/tv_assigned_employee"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_centerVertical="true"
                                android:layout_marginStart="@dimen/dimen_10x1"
                                android:layout_toEndOf="@+id/civ_assigned_employee"
                                android:text="Unassigned"
                                android:textColor="@color/black" />

                            <ImageView
                                android:id="@+id/iv_assign_employee"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignParentEnd="true"
                                android:layout_centerVertical="true"
                                android:src="@drawable/ic_switch_employee" />

                        </RelativeLayout>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/dimen_10x2"
                            android:text="Created Date"
                            android:textColor="@color/charcoal_text"
                            android:textSize="@dimen/material_text_subhead"
                            android:textStyle="bold" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/dimen_2x1"
                            android:orientation="horizontal">

                            <ImageView
                                android:id="@+id/civ_ticket_created_date"
                                android:layout_width="22dp"
                                android:layout_height="match_parent"
                                android:src="@drawable/ic_calendar_blue" />

                            <TextView
                                android:id="@+id/tv_ticket_created_date"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:layout_marginStart="@dimen/dimen_10x1"
                                android:text="Nov 12, 2020"
                                android:textColor="@color/black" />

                            <TextView
                                android:id="@+id/tv_ticket_created_time"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:layout_marginStart="@dimen/dimen_10x1"
                                android:text="4:00 PM"
                                android:textColor="@color/black" />

                        </LinearLayout>

                        <TextView
                            android:id="@+id/tv_team"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/dimen_10x2"
                            android:text="Team"
                            android:textColor="@color/charcoal_text"
                            android:textSize="@dimen/material_text_subhead"
                            android:textStyle="bold" />

                        <LinearLayout
                            android:id="@+id/ll_tags"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/dimen_2x1"
                            android:orientation="horizontal" />

                    </LinearLayout>

                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="2dp"
                    android:layout_marginTop="@dimen/dimens_2x"
                    android:background="#F0EDF1" />


                <LinearLayout
                    android:id="@+id/ll_customer"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:visibility="visible">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/dimen_10x2"
                        android:layout_marginTop="@dimen/dimen_10x1"
                        android:layout_marginEnd="@dimen/dimen_10x2">

                        <TextView
                            android:id="@+id/tv_customer_dropdown"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Customer Details"
                            android:textColor="@color/charcoal_text"
                            android:textSize="@dimen/material_text_subhead"
                            android:textStyle="bold" />

                        <ImageView
                            android:id="@+id/iv_dropdown_customer"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentEnd="true"
                            android:layout_centerInParent="true"
                            android:src="@drawable/ic_dropup" />

                    </RelativeLayout>

                    <net.cachapa.expandablelayout.ExpandableLayout
                        android:id="@+id/expandable_layout_customer"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:el_duration="500"
                        app:el_expanded="true"
                        app:el_parallax="0.5">

                        <LinearLayout
                            android:id="@+id/ll_customer_details"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/dimen_10x1"
                            android:layout_marginBottom="@dimen/dimen_6x1"
                            android:orientation="vertical">

                            <LinearLayout
                                android:id="@+id/ll_customer_name"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="@dimen/dimen_10x2"
                                android:layout_marginEnd="@dimen/dimen_10x2"
                                android:orientation="horizontal">

                                <de.hdodenhof.circleimageview.CircleImageView
                                    android:id="@+id/civ_customer"
                                    android:layout_width="22dp"
                                    android:layout_height="22dp"
                                    android:src="@drawable/ic_user_placeholder" />

                                <TextView
                                    android:id="@+id/tv_customer_name"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center_vertical"
                                    android:layout_marginStart="@dimen/dimen_10x1"
                                    android:text="Ram prasad"
                                    android:textColor="@color/black" />

                            </LinearLayout>

                            <LinearLayout
                                android:id="@+id/ll_customer_phone"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="@dimen/dimen_10x2"
                                android:layout_marginTop="@dimen/dimens_2x"
                                android:layout_marginEnd="@dimen/dimen_10x2"
                                android:orientation="horizontal">

                                <ImageView
                                    android:id="@+id/iv_customer_phone"
                                    android:layout_width="22dp"
                                    android:layout_height="wrap_content"
                                    android:src="@drawable/ic_customer_phone" />

                                <TextView
                                    android:id="@+id/tv_customer_phone"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center_vertical"
                                    android:layout_marginStart="@dimen/dimen_10x1"
                                    android:text="9849948119"
                                    android:textColor="@color/black" />

                            </LinearLayout>

                            <LinearLayout
                                android:id="@+id/ll_customer_email"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:layout_marginStart="@dimen/dimen_10x2"
                                android:layout_marginTop="@dimen/dimens_2x"
                                android:layout_marginEnd="@dimen/dimen_10x2"
                                android:orientation="horizontal">

                                <ImageView
                                    android:id="@+id/iv_customer_email"
                                    android:layout_width="22dp"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center"
                                    android:src="@drawable/ic_customer_mail" />

                                <TextView
                                    android:id="@+id/tv_customer_email"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center_vertical"
                                    android:layout_marginStart="@dimen/dimen_10x1"
                                    android:text="bluescfc44@gmail.com"
                                    android:textColor="@color/black" />

                            </LinearLayout>


                        </LinearLayout>

                    </net.cachapa.expandablelayout.ExpandableLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="2dp"
                        android:layout_marginTop="@dimen/dimen_10x1"
                        android:background="#F0EDF1" />

                    <LinearLayout
                        android:id="@+id/ll_contributors"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:visibility="visible">

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="@dimen/dimen_10x2"
                            android:layout_marginTop="@dimen/dimen_10x1"
                            android:layout_marginEnd="@dimen/dimen_10x2">

                            <TextView
                                android:id="@+id/tv_contributors_dropdown"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="Contributors"
                                android:textColor="@color/charcoal_text"
                                android:textSize="@dimen/material_text_subhead"
                                android:textStyle="bold" />

                            <ImageView
                                android:id="@+id/iv_dropdown_contributor"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignParentEnd="true"
                                android:layout_centerInParent="true"
                                android:src="@drawable/ic_dropup" />

                        </RelativeLayout>

                        <net.cachapa.expandablelayout.ExpandableLayout
                            android:id="@+id/expandable_layout_contributor"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/dimen_6x1"
                            app:el_duration="500"
                            app:el_expanded="true"
                            app:el_parallax="0.5">

                            <LinearLayout
                                android:id="@+id/ll_contributor_list"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="@dimen/dimen_10x2"
                                android:layout_marginEnd="@dimen/dimen_10x1"
                                android:orientation="vertical" />

                        </net.cachapa.expandablelayout.ExpandableLayout>

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="2dp"
                            android:layout_marginTop="@dimen/dimen_10x1"
                            android:background="#F0EDF1" />
                    </LinearLayout>

                    <TextView
                        android:id="@+id/tv_contributor"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/dimen_10x2"
                        android:layout_marginTop="@dimen/dimen_10x1"
                        android:layout_marginBottom="@dimen/dimen_10x1"
                        android:drawableStart="@drawable/ic_add_contributor"
                        android:drawablePadding="@dimen/dimen_10x1"
                        android:gravity="center_vertical"
                        android:text="Add Contributor"
                        android:textColor="@color/colorPrimary" />

                </LinearLayout>

            </LinearLayout>
        </ScrollView>
    </RelativeLayout>

    <include layout="@layout/bottomsheet_profile" />


</androidx.coordinatorlayout.widget.CoordinatorLayout>