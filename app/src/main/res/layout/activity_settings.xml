            <RelativeLayout
                android:id="@+id/rl_currency"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="?android:attr/selectableItemBackground"
                android:clickable="true"
                android:focusable="true"
                android:weightSum="1">

                <ImageView
                    android:id="@+id/iv_currency_icon"
                    android:layout_width="36dp"
                    android:layout_height="36dp"
                    android:layout_centerVertical="true"
                    android:layout_marginStart="@dimen/dimens_2x"
                    android:layout_marginTop="@dimen/dimen_2x4"
                    android:layout_marginEnd="@dimen/dimen_10x1"
                    android:layout_marginBottom="@dimen/dimen_2x4"
                    android:background="@drawable/circle_green"
                    android:padding="@dimen/dimen_10x1"
                    android:scaleType="fitCenter"
                    android:src="@drawable/ic_currency" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_toEndOf="@+id/iv_currency_icon"
                    android:text="@string/currency"
                    android:textColor="@color/black"
                    android:textSize="@dimen/material_text_normal"
                    android:textStyle="bold" />

                <ImageView
                    android:id="@+id/iv_arrow5"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    android:layout_margin="@dimen/dimens_2x"
                    android:scaleType="fitCenter"
                    android:src="@drawable/ic_right_arrow" />

            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/rl_location"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="?android:attr/selectableItemBackground"
                android:clickable="true"
                android:focusable="true"
                android:weightSum="1">

                <ImageView
                    android:id="@+id/iv_location"
                    android:layout_width="36dp"
                    android:layout_height="36dp"
                    android:layout_centerVertical="true"
                    android:layout_marginStart="@dimen/dimens_2x"
                    android:layout_marginTop="@dimen/dimen_2x4"
                    android:layout_marginEnd="@dimen/dimen_10x1"
                    android:layout_marginBottom="@dimen/dimen_2x4"
                    android:background="@drawable/circle_blue"
                    android:padding="@dimen/dimen_10x1"
                    android:scaleType="fitCenter"
                    android:src="@drawable/ic_locations" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_toEndOf="@+id/iv_location"
                    android:text="@string/location"
                    android:textColor="@color/black"
                    android:textSize="@dimen/material_text_normal"
                    android:textStyle="bold" />

                <ImageView
                    android:id="@+id/iv_arrow7"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    android:layout_margin="@dimen/dimens_2x"
                    android:scaleType="fitCenter"
                    android:src="@drawable/ic_right_arrow" />

            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/rl_timezone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="?android:attr/selectableItemBackground"
                android:clickable="true"
                android:focusable="true"
                android:weightSum="1">

                <ImageView
                    android:id="@+id/iv_timezone"
                    android:layout_width="36dp"
                    android:layout_height="36dp"
                    android:layout_centerVertical="true"
                    android:layout_marginStart="@dimen/dimens_2x"
                    android:layout_marginTop="@dimen/dimen_2x4"
                    android:layout_marginEnd="@dimen/dimen_10x1"
                    android:layout_marginBottom="@dimen/dimen_2x4"
                    android:background="@drawable/circle_light_purple"
                    android:padding="@dimen/dimen_10x1"
                    android:scaleType="fitCenter"
