<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:id="@+id/ll_ticket_view"
        android:layout_width="90dp"
        android:layout_height="130dp"
        android:layout_marginStart="@dimen/dimens_2x"
        android:layout_marginTop="@dimen/dimens_2x"
        android:background="@drawable/blue_round_bg"
        android:gravity="center"
        android:orientation="vertical"
        android:paddingTop="@dimen/dimen_10x1"
        android:paddingBottom="@dimen/dimen_10x1">

        <TextView
            android:id="@+id/date1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginStart="@dimen/dimen_6x1"
            android:layout_marginEnd="@dimen/dimen_6x1"
            android:text="12"
            android:textColor="@color/white"
            android:textSize="@dimen/material_text_title" />

        <TextView
            android:id="@+id/date2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginStart="@dimen/dimen_6x1"
            android:layout_marginEnd="@dimen/dimen_6x1"
            android:text="Nov, 2020"
            android:textColor="@color/white"
            android:textSize="@dimen/material_text_caption" />

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/dimen_6x1"
            android:layout_marginTop="@dimen/dimen_2x2"
            android:layout_marginBottom="@dimen/dimen_2x2"
            android:background="@drawable/dotted_line" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/dimen_6x1"
            android:layout_marginEnd="@dimen/dimen_6x1"
            android:text="@string/assigned_to"
            android:textColor="@color/white"
            android:textSize="@dimen/material_text_caption" />

        <de.hdodenhof.circleimageview.CircleImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_gravity="center"
            android:layout_margin="@dimen/dimen_2x2"
            android:src="@drawable/circle_user" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="130dp"
        android:layout_marginStart="@dimen/dimen_10x1"
        android:layout_marginTop="@dimen/dimens_2x"
        android:layout_toEndOf="@+id/ll_ticket_view"
        android:gravity="center"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/tv_ticket_id"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Ticket ID : "
                android:textColor="@color/service_info_text_color" />

            <TextView
                android:id="@+id/tv_ticket_id_value"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toEndOf="@id/tv_ticket_id"
                android:text="#124568"
                android:textColor="@color/black"
                android:textStyle="bold" />
        </RelativeLayout>

        <TextView
            android:id="@+id/tv_summary"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dimen_10x1"
            android:ellipsize="end"
            android:singleLine="true"
            android:text="Broken tv, fallen from tv stand"
            android:textColor="@color/black"
            android:textStyle="bold" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dimen_10x1">

            <TextView
                android:id="@+id/tv_customer"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Customer: "
                android:textColor="@color/service_info_text_color" />

            <TextView
                android:id="@+id/tv_customer_value"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toEndOf="@id/tv_customer"
                android:text="Ram prasad yadav"
                android:textColor="@color/black"
                android:textStyle="bold" />
        </RelativeLayout>

        <LinearLayout
            android:id="@+id/ll_tags"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dimen_10x1"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="@dimen/dimen_10x1"
                android:background="@drawable/tag_bg"
                android:paddingStart="@dimen/dimen_10x1"
                android:paddingTop="@dimen/dimen_2x2"
                android:paddingEnd="@dimen/dimen_10x1"
                android:paddingBottom="@dimen/dimen_2x2"
                android:text="Billing"
                android:textColor="@color/service_info_text_color"
                android:textSize="@dimen/material_text_caption" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="@dimen/dimen_10x1"
                android:background="@drawable/tag_bg"
                android:paddingStart="@dimen/dimen_10x1"
                android:paddingTop="@dimen/dimen_2x2"
                android:paddingEnd="@dimen/dimen_10x1"
                android:paddingBottom="@dimen/dimen_2x2"
                android:text="Technical"
                android:textColor="@color/service_info_text_color"
                android:textSize="@dimen/material_text_caption" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="@dimen/dimen_10x1"
                android:background="@drawable/tag_bg"
                android:paddingStart="@dimen/dimen_10x1"
                android:paddingTop="@dimen/dimen_2x2"
                android:paddingEnd="@dimen/dimen_10x1"
                android:paddingBottom="@dimen/dimen_2x2"
                android:text="Marketing"
                android:textColor="@color/service_info_text_color"
                android:textSize="@dimen/material_text_caption" />
        </LinearLayout>


    </LinearLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="@dimen/dimen_10x2"
        android:layout_marginEnd="@dimen/dimen_10x2"
        android:background="@drawable/started_resolved_bg"
        android:paddingStart="@dimen/dimen_10x1"
        android:paddingTop="@dimen/dimen_6x1"
        android:paddingEnd="@dimen/dimen_10x1"
        android:paddingBottom="@dimen/dimen_6x1"
        android:text="Started"
        android:textAllCaps="true"
        android:textColor="#239F15"
        android:textSize="10sp" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@+id/ll_ticket_view"
        android:layout_marginTop="@dimen/dimens_2x"
        android:background="#e7e7e7"
        android:paddingTop="@dimen/dimen_10x1" />
</RelativeLayout>