<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/scroll_view"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:fillViewport="false"
    android:scrollbars="none">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/ll_ticket_details"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/dimen_10x2"
            android:layout_marginTop="@dimen/dimen_2x4"
            android:layout_marginEnd="@dimen/dimen_10x2"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:id="@+id/tv_ticket_id_title"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/dimen_6x1"
                        android:text="Ticket Id"
                        android:textColor="@color/charcoal_text"
                        android:textSize="@dimen/material_text_subhead"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/tv_ticket_id"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/tv_ticket_id_title"
                        android:text="1234"
                        android:textColor="@color/black" />


                    <TextView
                        android:id="@+id/tv_ticket_status"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentEnd="true"
                        android:layout_marginTop="@dimen/dimen_2x4"
                        android:background="@drawable/started_bg"
                        android:paddingStart="@dimen/dimen_10x1"
                        android:paddingTop="@dimen/dimen_6x1"
                        android:paddingEnd="@dimen/dimen_10x1"
                        android:paddingBottom="@dimen/dimen_6x1"
                        android:text="Started"
                        android:textAllCaps="true"
                        android:textColor="#2F80ED"
                        android:textSize="10sp" />

                </RelativeLayout>

                <TextView
                    android:id="@+id/tv_ticket_type"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dimen_10x2"
                    android:text="Ticket Type"
                    android:textColor="@color/charcoal_text"
                    android:textSize="@dimen/material_text_subhead"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/tv_ticket_type_value"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/tv_ticket_id_title"
                    android:text="Software"
                    android:textColor="@color/black" />


                <TextView
                    android:id="@+id/tv_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dimen_10x2"
                    android:text="Summary"
                    android:textColor="@color/charcoal_text"
                    android:textSize="@dimen/material_text_subhead"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/tv_ticket_title"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Broken tv fallen from stand"
                    android:textColor="@color/charcoal_text" />


                <TextView
                    android:id="@+id/tv_description"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dimen_10x2"
                    android:text="Description"
                    android:textColor="@color/charcoal_text"
                    android:textSize="@dimen/material_text_subhead"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/tv_ticket_desc"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="kjasdf alksdjf lajsdfl alskdjf lasdflkj asdflkj alsdflkj "
                    android:textColor="@color/black" />

                <TextView
                    android:id="@+id/tv_estimated_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dimen_10x2"
                    android:text="Estimated Time"
                    android:textColor="@color/charcoal_text"
                    android:textSize="@dimen/material_text_subhead"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/tv_estimated_time_value"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/tv_ticket_id_title"
                    android:text="1 day 7 hours"
                    android:textColor="@color/black" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dimen_10x2"
                    android:text="Priority"
                    android:textColor="@color/charcoal_text"
                    android:textSize="@dimen/material_text_subhead"
                    android:textStyle="bold" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dimen_2x1"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/iv_priority"
                        android:layout_width="22dp"
                        android:layout_height="22dp"
                        android:paddingTop="@dimen/dimen_2x1"
                        android:paddingBottom="@dimen/dimen_2x1"
                        android:src="@drawable/ic_medium_small" />

                    <TextView
                        android:id="@+id/tv_priority"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginStart="@dimen/dimen_10x1"
                        android:text="Medium"
                        android:textColor="@color/black" />

                </LinearLayout>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dimen_10x2"
                    android:text="Service"
                    android:textColor="@color/charcoal_text"
                    android:textSize="@dimen/material_text_subhead"
                    android:textStyle="bold" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/iv_service"
                        android:layout_width="22dp"
                        android:layout_height="22dp"
                        android:src="@drawable/ic_service_ph" />

                    <TextView
                        android:id="@+id/tv_service"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginStart="@dimen/dimen_10x1"
                        android:text="Vianet"
                        android:textColor="@color/black" />

                </LinearLayout>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dimen_10x2"
                    android:text="Created By"
                    android:textColor="@color/charcoal_text"
                    android:textSize="@dimen/material_text_subhead"
                    android:textStyle="bold" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dimen_2x1"
                    android:orientation="horizontal">

                    <de.hdodenhof.circleimageview.CircleImageView
                        android:id="@+id/civ_ticket_created_by"
                        android:layout_width="22dp"
                        android:layout_height="22dp"
                        android:src="@drawable/ic_user_placeholder" />

                    <TextView
                        android:id="@+id/tv_ticket_created_by"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginStart="@dimen/dimen_10x1"
                        android:text="John Legend"
                        android:textColor="@color/black" />

                </LinearLayout>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dimen_10x2"
                    android:text="Assigned Employee"
                    android:textColor="@color/charcoal_text"
                    android:textSize="@dimen/material_text_subhead"
                    android:textStyle="bold" />

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dimen_2x1">

                    <de.hdodenhof.circleimageview.CircleImageView
                        android:id="@+id/civ_assigned_employee"
                        android:layout_width="22dp"
                        android:layout_height="22dp"
                        android:src="@drawable/ic_user_placeholder" />

                    <TextView
                        android:id="@+id/tv_assigned_employee"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginStart="@dimen/dimen_10x1"
                        android:layout_toEndOf="@+id/civ_assigned_employee"
                        android:text="Unassigned"
                        android:textColor="@color/black" />

                </RelativeLayout>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dimen_10x2"
                    android:text="Created Date"
                    android:textColor="@color/charcoal_text"
                    android:textSize="@dimen/material_text_subhead"
                    android:textStyle="bold" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dimen_2x1"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/civ_ticket_created_date"
                        android:layout_width="22dp"
                        android:layout_height="match_parent"
                        android:src="@drawable/ic_calendar_blue" />

                    <TextView
                        android:id="@+id/tv_ticket_created_date"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginStart="@dimen/dimen_10x1"
                        android:text="Nov 12, 2020"
                        android:textColor="@color/black" />

                    <TextView
                        android:id="@+id/tv_ticket_created_time"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginStart="@dimen/dimen_10x1"
                        android:text="4:00 PM"
                        android:textColor="@color/black" />

                </LinearLayout>

                <TextView
                    android:id="@+id/tv_team"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dimen_10x2"
                    android:text="Team"
                    android:textColor="@color/charcoal_text"
                    android:textSize="@dimen/material_text_subhead"
                    android:textStyle="bold" />

                <HorizontalScrollView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fillViewport="true"
                    android:scrollbars="none">

                    <LinearLayout
                        android:id="@+id/ll_tags"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/dimen_2x1"
                        android:orientation="horizontal" />
                </HorizontalScrollView>

                <LinearLayout
                    android:id="@+id/ll_label_holder"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/tv_label"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/dimen_10x2"
                        android:text="Label"
                        android:textColor="@color/charcoal_text"
                        android:textSize="@dimen/material_text_subhead"
                        android:textStyle="bold" />

                    <HorizontalScrollView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fillViewport="true"
                        android:scrollbars="none">

                        <LinearLayout
                            android:id="@+id/ll_labels"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/dimen_2x1"
                            android:orientation="horizontal" />
                    </HorizontalScrollView>
                </LinearLayout>

            </LinearLayout>

        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:layout_marginTop="@dimen/dimens_2x"
            android:background="#F0EDF1" />


        <LinearLayout
            android:id="@+id/ll_customer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:visibility="visible">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/dimen_10x2"
                android:layout_marginTop="@dimen/dimen_10x1"
                android:layout_marginEnd="@dimen/dimen_10x2">

                <TextView
                    android:id="@+id/tv_customer_dropdown"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Customer Details"
                    android:textColor="@color/charcoal_text"
                    android:textSize="@dimen/material_text_subhead"
                    android:textStyle="bold" />

                <ImageView
                    android:id="@+id/iv_dropdown_customer"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_centerInParent="true"
                    android:src="@drawable/ic_dropup" />

            </RelativeLayout>

            <net.cachapa.expandablelayout.ExpandableLayout
                android:id="@+id/expandable_layout_customer"
                app:el_duration="500"
                app:el_expanded="true"
                app:el_parallax="0.5"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:id="@+id/ll_customer_details"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dimen_10x1"
                    android:layout_marginBottom="@dimen/dimen_6x1"
                    android:orientation="vertical">

                    <LinearLayout
                        android:id="@+id/ll_customer_name"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/dimen_10x2"
                        android:layout_marginEnd="@dimen/dimen_10x2"
                        android:orientation="horizontal">

                        <de.hdodenhof.circleimageview.CircleImageView
                            android:id="@+id/civ_customer"
                            android:layout_width="22dp"
                            android:layout_height="22dp"
                            android:src="@drawable/ic_user_placeholder" />

                        <TextView
                            android:id="@+id/tv_customer_name"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:layout_marginStart="@dimen/dimen_10x1"
                            android:text="Ram prasad"
                            android:textColor="@color/black" />

                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/ll_customer_phone"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/dimen_10x2"
                        android:layout_marginTop="@dimen/dimens_2x"
                        android:layout_marginEnd="@dimen/dimen_10x2"
                        android:orientation="horizontal">

                        <ImageView
                            android:id="@+id/iv_customer_phone"
                            android:layout_width="22dp"
                            android:layout_height="wrap_content"
                            android:src="@drawable/ic_customer_phone" />

                        <TextView
                            android:id="@+id/tv_customer_phone"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:layout_marginStart="@dimen/dimen_10x1"
                            android:text="9849948119"
                            android:textColor="@color/black" />

                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/ll_customer_email"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginStart="@dimen/dimen_10x2"
                        android:layout_marginTop="@dimen/dimens_2x"
                        android:layout_marginEnd="@dimen/dimen_10x2"
                        android:orientation="horizontal">

                        <ImageView
                            android:id="@+id/iv_customer_email"
                            android:layout_width="22dp"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:src="@drawable/ic_customer_mail" />

                        <TextView
                            android:id="@+id/tv_customer_email"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:layout_marginStart="@dimen/dimen_10x1"
                            android:text="bluescfc44@gmail.com"
                            android:textColor="@color/black" />

                    </LinearLayout>


                </LinearLayout>

            </net.cachapa.expandablelayout.ExpandableLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:layout_marginTop="@dimen/dimen_10x1"
                android:background="#F0EDF1" />

            <LinearLayout
                android:id="@+id/ll_contributors"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:visibility="visible">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/dimen_10x2"
                    android:layout_marginTop="@dimen/dimen_10x1"
                    android:layout_marginEnd="@dimen/dimen_10x2">

                    <TextView
                        android:id="@+id/tv_contributors_dropdown"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Contributors"
                        android:textColor="@color/charcoal_text"
                        android:textSize="@dimen/material_text_subhead"
                        android:textStyle="bold" />

                    <ImageView
                        android:id="@+id/iv_dropdown_contributor"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentEnd="true"
                        android:layout_centerInParent="true"
                        android:src="@drawable/ic_dropup" />

                </RelativeLayout>

                <net.cachapa.expandablelayout.ExpandableLayout
                    android:id="@+id/expandable_layout_contributor"
                    app:el_duration="500"
                    app:el_expanded="true"
                    app:el_parallax="0.5"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dimen_6x1">

                    <LinearLayout
                        android:id="@+id/ll_contributor_list"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_marginStart="@dimen/dimen_10x2"
                        android:layout_marginEnd="@dimen/dimen_10x1"
                        android:gravity="center_vertical"
                        android:orientation="vertical" />

                </net.cachapa.expandablelayout.ExpandableLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="2dp"
                    android:layout_marginTop="@dimen/dimen_10x1"
                    android:background="#F0EDF1" />
            </LinearLayout>

        </LinearLayout>

    </LinearLayout>
</ScrollView>