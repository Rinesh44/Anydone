<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/rl_ticket_holder"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="?selectableItemBackground"
    android:clickable="true"
    android:focusable="true"
    android:paddingBottom="@dimen/dimen_5x1">

    <LinearLayout
        android:id="@+id/ll_ticket_view"
        android:layout_width="62dp"
        android:layout_height="58dp"
        android:layout_marginStart="@dimen/dimen_10x1"
        android:layout_marginTop="@dimen/dimen_5x1"
        android:background="@drawable/blue_round_bg"
        android:orientation="vertical"
        android:paddingBottom="@dimen/dimen_2x1">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:orientation="vertical">

            <TextView
                android:id="@+id/date1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginStart="@dimen/dimen_6x1"
                android:layout_marginEnd="@dimen/dimen_6x1"
                android:text="14"
                android:textColor="@color/white"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/date2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginStart="@dimen/dimen_2x1"
                android:layout_marginEnd="@dimen/dimen_2x1"
                android:text="Nov, 2020"
                android:textColor="@color/white"
                android:textSize="10dp" />

        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_details_holder"
        android:layout_width="match_parent"
        android:layout_height="58dp"
        android:layout_marginStart="@dimen/dimen_10x1"
        android:layout_marginTop="@dimen/dimen_5x1"
        android:layout_toEndOf="@+id/ll_ticket_view"
        android:gravity="center"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/tv_ticket_id_value"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="start"
                android:gravity="bottom"
                android:text="#124568"
                android:textColor="@color/charcoal_text"
                android:textSize="13sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tv_ticket_status"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/dimen_2x4"
                android:layout_toEndOf="@+id/tv_ticket_id_value"
                android:background="@drawable/resolved_bg"
                android:paddingStart="@dimen/dimen_6x1"
                android:paddingTop="@dimen/dimen_3x1"
                android:paddingEnd="@dimen/dimen_6x1"
                android:paddingBottom="@dimen/dimen_3x1"
                android:text="Started"
                android:textAllCaps="true"
                android:textColor="#239F15"
                android:textSize="9sp" />

        </RelativeLayout>

        <TextView
            android:id="@+id/tv_summary"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dimen_2x2"
            android:ellipsize="end"
            android:paddingEnd="@dimen/dimen_10x1"
            android:singleLine="true"
            android:text="Broken tv, fallen from tv stand"
            android:textColor="@color/charcoal_text"
            android:textSize="13sp"
            android:textStyle="bold" />

    </LinearLayout>
</RelativeLayout>