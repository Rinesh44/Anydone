<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/rl_ticket_holder"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="?selectableItemBackground"
    android:clickable="true"
    android:focusable="true"
    android:paddingBottom="@dimen/dimen_5x1">

    <LinearLayout
        android:id="@+id/ll_details_holder"
        android:layout_width="match_parent"
        android:layout_height="58dp"
        android:layout_marginTop="@dimen/dimen_5x1"
        android:gravity="center"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/tv_ticket_id_value"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="start"
                android:fontFamily="@font/bold"
                android:gravity="bottom"
                android:text="#124568"
                android:textColor="@color/colorPrimary"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/tv_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/dimen_10x1"
                android:layout_toEndOf="@+id/tv_ticket_id_value"
                android:layout_centerVertical="true"
                android:text="19/11/20"
                android:textColor="@color/service_info_text_color"
                android:textSize="@dimen/material_text_body2" />

            <TextView
                android:id="@+id/tv_ticket_status"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_marginStart="@dimen/dimen_2x4"
                android:background="@drawable/resolved_bg"
                android:paddingStart="@dimen/dimen_6x1"
                android:paddingTop="@dimen/dimen_3x1"
                android:paddingEnd="@dimen/dimen_6x1"
                android:paddingBottom="@dimen/dimen_3x1"
                android:text="Started"
                android:textAllCaps="true"
                android:textColor="#239F15"
                android:textSize="9sp" />

        </RelativeLayout>

        <TextView
            android:id="@+id/tv_summary"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dimen_2x2"
            android:ellipsize="end"
            android:paddingEnd="@dimen/dimen_10x1"
            android:singleLine="true"
            android:text="Broken tv, fallen from tv stand"
            android:textColor="@color/service_info_text_color"
            android:textSize="13sp" />

    </LinearLayout>
</RelativeLayout>