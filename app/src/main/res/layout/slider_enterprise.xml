<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="@dimen/dimen_10x5">


    <com.google.android.material.card.MaterialCardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="6dp"
        app:cardElevation="@dimen/dimen_4x1"
        app:cardUseCompatPadding="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="vertical"
            android:padding="@dimen/dimen_10x2">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Enterprise"
                android:textColor="@color/charcoal_text"
                android:textSize="24sp"
                android:textStyle="bold" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:text="$20"
                android:textColor="@color/charcoal_text"
                android:textSize="@dimen/dimen_10x3"
                android:textStyle="bold" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:text="Per month"
                android:textColor="@color/charcoal_text"
                android:textSize="@dimen/dimens_2x"
                android:textStyle="bold" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dimens_2x"
                android:gravity="center_horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Unlimited"
                    android:textColor="@color/charcoal_text"
                    android:textSize="@dimen/dimens_2x"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/dimen_10x1"
                    android:text="Employee"
                    android:textColor="@color/service_info_text_color"
                    android:textSize="@dimen/dimens_2x" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dimen_10x1"
                android:gravity="center_horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Unlimited"
                    android:textColor="@color/charcoal_text"
                    android:textSize="@dimen/dimens_2x"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/dimen_10x1"
                    android:text="Service"
                    android:textColor="@color/service_info_text_color"
                    android:textSize="@dimen/dimens_2x" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dimen_10x1"
                android:gravity="center_horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Unlimited"
                    android:textColor="@color/charcoal_text"
                    android:textSize="@dimen/dimens_2x"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/dimen_10x1"
                    android:text="Integration"
                    android:textColor="@color/service_info_text_color"
                    android:textSize="@dimen/dimens_2x" />

            </LinearLayout>

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btn_upgrade_enterprise"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/dimen_10x1"
                android:layout_marginTop="@dimen/dimens_2x"
                android:layout_marginEnd="@dimen/dimen_10x1"
                android:backgroundTint="@color/colorPrimary"
                android:fontFamily="@font/bold"
                android:padding="@dimen/dimens_2x"
                android:text="Upgrade plan"
                android:textAllCaps="false"
                android:textColor="@color/white"
                android:textSize="18sp"
                app:strokeColor="@color/colorPrimary" />

        </LinearLayout>

    </com.google.android.material.card.MaterialCardView>


</RelativeLayout>