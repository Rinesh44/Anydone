        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_attach_options"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@id/ll_search_container"
        android:layout_marginStart="@dimen/dimens_2x"
        android:layout_marginEnd="@dimen/dimen_10x1"
        android:layout_marginBottom="@dimen/dimen_6x1"
        android:elevation="@dimen/dimen_2x2"
        android:orientation="horizontal"
        android:visibility="gone"
        android:weightSum="9">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/dimen_2x4"
            android:layout_weight="9"
            android:background="@drawable/thread_attachment_options"
            android:padding="@dimen/dimen_10x1">

            <TextView
                android:id="@+id/tv_files"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:drawableTop="@drawable/ic_file"
                android:gravity="center"
                android:padding="@dimen/dimen_4x1"
                android:text="@string/files"
                android:textColor="@color/charcoal_text"
                android:textSize="@dimen/material_text_caption" />

            <TextView
                android:id="@+id/tv_camera"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:drawableTop="@drawable/ic_camera_thin"
                android:gravity="center"
                android:padding="@dimen/dimen_2x2"
                android:text="@string/camera"
                android:textColor="@color/charcoal_text"
                android:textSize="@dimen/material_text_caption" />

            <TextView
                android:id="@+id/tv_recorder"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:drawableTop="@drawable/ic_mic_thin"
                android:gravity="center"
                android:padding="@dimen/dimen_2x2"
                android:text="@string/recorder"
                android:textColor="@color/charcoal_text"
                android:textSize="@dimen/material_text_caption"
                android:visibility="gone" />

            <TextView
                android:id="@+id/tv_gallery"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:drawableTop="@drawable/ic_gallery"
                android:gravity="center"
                android:padding="@dimen/dimen_2x2"
                android:text="@string/gallery"
                android:textColor="@color/charcoal_text"
                android:textSize="@dimen/material_text_caption" />

        </LinearLayout>

    </LinearLayout>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rv_reply_threads"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@id/ll_search_container"
        android:layout_below="@+id/ll_parent_holder"
        android:layout_marginStart="@dimen/dimen_10x5"
        android:clipToPadding="false"
        android:paddingBottom="@dimen/dimen_10x1" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rv_mentions"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/ll_search_container"
        android:layout_marginStart="@dimen/dimens_2x"
        android:layout_marginEnd="@dimen/dimens_2x"
        android:layout_marginBottom="@dimen/dimen_10x1"
        android:background="#f7fbfd"
        android:elevation="@dimen/dimen_10x1"
        android:visibility="gone" />

    <LinearLayout
        android:id="@+id/ll_search_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/ll_text_modifier_container"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="@dimen/dimens_2x"
        android:layout_marginEnd="@dimen/dimens_2x"
        android:layout_marginBottom="@dimen/dimens_1x"
        android:background="@drawable/thread_chat_bg"
        android:clipToPadding="false"
        android:elevation="4dp"
        android:orientation="horizontal"
        android:paddingTop="@dimen/dimen_2x2"
        android:paddingEnd="@dimen/dimen_6x1"
        android:paddingBottom="@dimen/dimen_2x2"
        android:visibility="visible"
        android:weightSum="10"
        tools:ignore="UnknownIdInLayout">

        <ImageView
            android:id="@+id/iv_attachment"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:layout_marginStart="@dimen/dimen_2x2"
            android:layout_marginEnd="@dimen/dimen_10x1"
            android:layout_weight="1"
            android:paddingStart="@dimen/dimen_10x1"
            android:paddingTop="@dimen/dimen_10x1"
            android:paddingEnd="@dimen/dimen_10x1"
            android:paddingBottom="@dimen/dimen_6x1"
            android:src="@drawable/ic_attachment"
            tools:ignore="UnusedAttribute"
            tools:targetApi="m" />

        <com.chinalwb.are.AREditText
            android:id="@+id/rich_editor"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_weight="8"
            android:backgroundTint="#F1F1F1"
            android:gravity="start"
            android:hint="Reply"
            android:maxLines="5"
            android:paddingEnd="@dimen/dimen_10x1"
            android:scrollbars="vertical"
            android:textColor="@color/charcoal_text"
            android:textSize="14sp" />

        <ImageView
            android:id="@+id/iv_send"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:layout_weight="1"
            android:paddingTop="@dimen/dimen_2x4"
            android:paddingBottom="@dimen/dimen_2x4"
            android:src="@drawable/ic_send_blue"
            android:visibility="visible"
            app:tint="@color/selector_disabled" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_toolbar_holder"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <com.google.android.material.appbar.AppBarLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar">

            <androidx.appcompat.widget.Toolbar
                android:id="@+id/toolbar"
                android:layout_width="match_parent"
                android:layout_height="?attr/actionBarSize"
                android:background="@color/white"
                app:layout_scrollFlags="scroll|enterAlways"
                app:popupTheme="@style/ThemeOverlay.AppCompat.Light"
                app:theme="@style/AppTheme.Anydone">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="@dimen/dimens_2x">

                    <TextView
                        android:id="@+id/toolbar_title"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginEnd="@dimen/dimen_10x1"
                        android:layout_toEndOf="@+id/iv_back"
                        android:gravity="start"
                        android:text="Replies"
                        android:textColor="@color/black"
                        android:textSize="20sp"
                        android:textStyle="bold" />

                    <ImageView
                        android:id="@+id/iv_back"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginStart="@dimen/dimen_5x1"
                        android:layout_marginEnd="@dimen/dimen_10x3"
                        android:paddingStart="@dimen/dimen_10x1"
                        android:paddingTop="@dimen/dimen_5x1"
                        android:paddingEnd="@dimen/dimen_10x1"
                        android:paddingBottom="@dimen/dimen_5x1"
                        android:src="@drawable/ic_back"
                        app:tint="@color/colorPrimary" />

                </RelativeLayout>

            </androidx.appcompat.widget.Toolbar>

        </com.google.android.material.appbar.AppBarLayout>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_parent_holder"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/ll_toolbar_holder"
        android:layout_marginBottom="@dimen/dimen_5x1"
        android:orientation="vertical">

        <RelativeLayout
            android:id="@+id/rl_text_holder"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/dimens_2x"
            android:paddingTop="@dimen/dimen_2x1"
            android:visibility="gone">

            <RelativeLayout
                android:id="@+id/rl_text_holder_aligned"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="@dimen/dimens_11x"
                android:descendantFocusability="blocksDescendants">

                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/civ_sender"
                    android:layout_width="35dp"
                    android:layout_height="35dp"
                    android:padding="@dimen/dimen_2x2"
                    android:src="@drawable/ic_bot_icon"
                    app:civ_border_color="@color/colorPrimary" />


                <LinearLayout
                    android:id="@+id/ll_text_holder"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/dimen_6x1"
                    android:layout_toEndOf="@id/civ_sender"
                    android:background="@drawable/chat_bg_incoming"
                    android:orientation="vertical"
                    android:paddingStart="@dimen/dimens_2x"
                    android:paddingTop="@dimen/dimen_2x4"
                    android:paddingBottom="@dimen/dimen_10x1">

                    <TextView
                        android:id="@+id/tv_title"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="@dimen/dimen_10x2"
                        android:text="Anydone Bot"
                        android:textColor="@color/colorPrimary"
                        android:textSize="@dimen/material_text_caption"
                        android:textStyle="bold"
                        android:visibility="visible" />

                    <TextView
                        android:id="@+id/tv_text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="@dimen/dimens_2x"
                        android:clickable="false"
                        android:focusable="false"
                        android:focusableInTouchMode="false"
                        android:longClickable="false"
                        android:textColor="@color/black"
                        android:visibility="visible" />

                </LinearLayout>

            </RelativeLayout>
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/rl_link_holder"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/dimens_2x"
            android:paddingTop="@dimen/dimen_2x1"
            android:visibility="gone">

            <RelativeLayout
                android:id="@+id/rl_link_holder_aligned"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginEnd="@dimen/dimens_11x"
                android:descendantFocusability="blocksDescendants">

                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/civ_sender_link"
                    android:layout_width="35dp"
                    android:layout_height="35dp"
                    android:padding="@dimen/dimen_2x2"
                    android:src="@drawable/ic_bot_icon"
                    app:civ_border_color="@color/colorPrimary" />

                <LinearLayout
                    android:id="@+id/ll_url_preview"
                    android:layout_width="@dimen/dimens_33x"
                    android:layout_height="@dimen/dimens_38x"
                    android:layout_margin="@dimen/dimen_6x1"
                    android:layout_toEndOf="@+id/civ_sender_link"
                    android:background="@drawable/chat_bg_incoming"
                    android:orientation="vertical"
                    android:paddingStart="@dimen/dimens_2x"
                    android:paddingTop="@dimen/dimens_1x"
                    android:paddingEnd="@dimen/dimens_2x"
                    android:paddingBottom="@dimen/dimens_2x"
                    android:visibility="visible">

                    <TextView
                        android:id="@+id/tv_url_user"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="@dimen/dimen_10x2"
                        android:text="Anydone Bot"
                        android:textColor="@color/colorPrimary"
                        android:textSize="@dimen/material_text_caption"
                        android:textStyle="bold"
                        android:visibility="visible" />

                    <TextView
                        android:id="@+id/tv_url"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:autoLink="web"
                        android:text="https://url.placeholder.com" />

                    <ImageView
                        android:id="@+id/iv_url_image"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/dimens_17x"
                        android:layout_marginTop="@dimen/dimen_2x4"
                        android:layout_marginBottom="@dimen/dimen_2x4"
                        android:scaleType="fitXY"
                        android:src="@drawable/ic_imageholder" />

                    <TextView
                        android:id="@+id/tv_url_title"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/dimen_2x2"
                        android:layout_marginBottom="@dimen/dimen_2x2"
                        android:text="Title"
                        android:textColor="@color/black"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/tv_url_desc"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:ellipsize="end"
                        android:maxLines="3"
                        android:text="Description"
                        android:textSize="@dimen/material_text_caption" />

                </LinearLayout>
            </RelativeLayout>

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/rl_image_holder"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/dimens_2x"
            android:paddingTop="@dimen/dimen_2x1"
            android:visibility="gone">

            <RelativeLayout
                android:id="@+id/rl_image_holder_aligned"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tv_sent_at"
                android:layout_marginEnd="@dimen/dimens_8x"
                android:descendantFocusability="blocksDescendants">

                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/civ_sender_image"
                    android:layout_width="35dp"
                    android:layout_height="35dp"
                    android:padding="@dimen/dimen_2x2"
                    android:src="@drawable/ic_bot_icon"
                    app:civ_border_color="@color/colorPrimary" />

                <com.google.android.material.card.MaterialCardView
                    android:id="@+id/cv_image_portrait"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_margin="@dimen/dimen_6x1"
                    android:layout_toEndOf="@+id/civ_sender_image"
                    android:longClickable="true"
                    android:visibility="visible"
                    app:cardCornerRadius="@dimen/dimens_1x">

                    <RelativeLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/tv_img_user"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="@dimen/dimen_10x1"
                            android:layout_marginEnd="@dimen/dimen_10x2"
                            android:padding="@dimen/dimen_6x1"
                            android:text="Anydone Bot"
                            android:textColor="@color/colorPrimary"
                            android:textSize="@dimen/material_text_caption"
                            android:textStyle="bold"
                            android:visibility="visible" />

                        <ImageView
                            android:id="@+id/iv_image"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/tv_img_user"
                            android:adjustViewBounds="true"
                            android:scaleType="fitXY"
                            android:src="@drawable/profile_image" />

                        <TextView
                            android:id="@+id/tv_image_desc"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_alignParentBottom="true"
                            android:background="@color/charcoal"
                            android:ellipsize="end"
                            android:maxLines="2"
                            android:padding="@dimen/dimen_6x1"
                            android:text="asdg asdg"
                            android:textColor="@color/white"
                            android:textSize="@dimen/material_text_caption"
                            android:visibility="gone" />

                    </RelativeLayout>
                </com.google.android.material.card.MaterialCardView>
            </RelativeLayout>
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/rl_doc_holder"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/dimens_2x"
            android:paddingTop="@dimen/dimen_2x1"
            android:visibility="gone">

            <RelativeLayout
                android:id="@+id/rl_doc_holder_aligned"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginEnd="@dimen/dimens_11x"
                android:descendantFocusability="blocksDescendants">

                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/civ_sender_doc"
                    android:layout_width="35dp"
                    android:layout_height="35dp"
                    android:padding="@dimen/dimen_2x2"
                    android:src="@drawable/ic_bot_icon"
                    app:civ_border_color="@color/colorPrimary" />

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/dimen_6x1"
                    android:layout_toEndOf="@+id/civ_sender_doc"
                    android:background="@drawable/chat_bg_incoming"
                    android:paddingStart="@dimen/dimen_10x1"
                    android:paddingTop="@dimen/dimen_10x1"
                    android:paddingEnd="@dimen/dimen_10x2"
                    android:paddingBottom="@dimen/dimen_10x1"
                    android:visibility="visible">

                    <TextView
                        android:id="@+id/tv_doc_user"
                        android:layout_width="wrap_content"
