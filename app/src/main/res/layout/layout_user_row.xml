<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:id="@+id/rl_holder"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="?android:attr/selectableItemBackground"
        android:clickable="true"
        android:focusable="true"
        android:padding="12dp">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/civ_customer"
            android:layout_width="44dp"
            android:layout_height="44dp"
            android:src="@drawable/circle_user" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginStart="@dimen/dimens_2x"
            android:layout_marginEnd="@dimen/dimen_10x1"
            android:layout_toEndOf="@+id/civ_customer"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_customer_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="James Corner"
                android:textColor="#333333"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tv_email"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dimen_5x1"
                android:autoLink="email"
                android:drawableStart="@drawable/ic_profile_email"
                android:drawablePadding="@dimen/dimen_5x1"
                android:drawableTint="@color/colorPrimary"
                android:text="bluescfc44@gmail.com"
                android:textColor="#666666"
                android:textColorLink="#666666"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tv_phone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dimen_2x4"
                android:drawableStart="@drawable/ic_profile_phone"
                android:drawablePadding="@dimen/dimen_5x1"
                android:drawableTint="@color/colorPrimary"
                android:text="9849948119"
                android:textColor="#666666"
                android:textStyle="bold" />

        </LinearLayout>

    </RelativeLayout>

    <View
        android:id="@+id/view_separator"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@+id/rl_holder"
        android:background="#E7E7E7" />

</RelativeLayout>