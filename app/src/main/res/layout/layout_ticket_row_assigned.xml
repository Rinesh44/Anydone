<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/rl_ticket_holder"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:id="@+id/ll_ticket_view"
        android:layout_width="75dp"
        android:layout_height="130dp"
        android:layout_marginStart="@dimen/dimens_2x"
        android:layout_marginTop="@dimen/dimens_2x"
        android:background="@drawable/blue_round_bg"
        android:orientation="vertical"
        android:paddingTop="@dimen/dimen_10x1"
        android:paddingBottom="@dimen/dimen_10x1">

        <TextView
            android:id="@+id/date1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginStart="@dimen/dimen_6x1"
            android:layout_marginEnd="@dimen/dimen_6x1"
            android:text="12"
            android:textColor="@color/white"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/date2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginStart="@dimen/dimen_6x1"
            android:layout_marginEnd="@dimen/dimen_6x1"
            android:text="Nov, 2020"
            android:textColor="@color/white"
            android:textSize="@dimen/material_text_caption" />

        <View
            android:id="@+id/v_dots"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dimen_6x1"
            android:layout_marginTop="@dimen/dimen_6x1"
            android:layout_marginBottom="@dimen/dimen_2x2"
            android:background="@drawable/dotted_line" />


        <RelativeLayout
            android:id="@+id/ll_assinged_employee_holder"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_marginStart="@dimen/dimen_2x2"
            android:layout_gravity="center"
            android:layout_marginTop="13dp"
            android:layout_marginEnd="@dimen/dimen_2x2" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="130dp"
        android:layout_marginStart="@dimen/dimen_10x1"
        android:layout_marginTop="@dimen/dimens_2x"
        android:layout_toEndOf="@+id/ll_ticket_view"
        android:gravity="center"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_ticket_id_value"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="start"
            android:text="#124568"
            android:textColor="@color/black"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tv_summary"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dimen_10x1"
            android:ellipsize="end"
            android:paddingEnd="@dimen/dimen_10x2"
            android:singleLine="true"
            android:text="Broken tv, fallen from tv stand"
            android:textColor="@color/black"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tv_customer_value"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="start"
            android:layout_marginTop="@dimen/dimen_10x1"
            android:text="Ram prasad yadav"
            android:textColor="@color/black"
            android:textStyle="bold" />

        <HorizontalScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:scrollbars="none">

            <LinearLayout
                android:id="@+id/ll_tags"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dimen_10x1"
                android:orientation="horizontal">

            </LinearLayout>

        </HorizontalScrollView>
    </LinearLayout>

    <TextView
        android:id="@+id/tv_ticket_status"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="@dimen/dimen_10x2"
        android:layout_marginEnd="@dimen/dimen_10x2"
        android:background="@drawable/resolved_bg"
        android:paddingStart="@dimen/dimen_10x1"
        android:paddingTop="@dimen/dimen_6x1"
        android:paddingEnd="@dimen/dimen_10x1"
        android:paddingBottom="@dimen/dimen_6x1"
        android:text="Started"
        android:textAllCaps="true"
        android:textColor="#239F15"
        android:textSize="10sp" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@+id/ll_ticket_view"
        android:layout_marginTop="@dimen/dimens_2x"
        android:background="#e7e7e7"
        android:paddingTop="@dimen/dimen_10x1" />
</RelativeLayout>