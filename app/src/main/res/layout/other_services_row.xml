<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/dimen_2x2"
    app:cardBackgroundColor="@color/white"
    app:cardCornerRadius="@dimen/dimen_6x1"
    app:cardElevation="@dimen/dimen_2x2">

    <RelativeLayout
        android:id="@+id/rl_service_holder"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="@dimen/dimen_10x2"
        android:clickable="true"
        android:focusable="true">

        <ImageView
            android:id="@+id/iv_service_icon"
            android:layout_width="@dimen/dimens_5x"
            android:layout_height="@dimen/dimens_5x"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/dimen_10x1"
            android:src="@drawable/ic_mechanic_icon" />

        <TextView
            android:id="@+id/tv_service_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/iv_service_icon"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/dimen_10x1"
            android:text="Mechanic"
            android:textAllCaps="true"
            android:textColor="@color/black"
            android:textSize="@dimen/material_text_body2" />

    </RelativeLayout>

</com.google.android.material.card.MaterialCardView>