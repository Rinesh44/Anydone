<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/estimated_time_suggestions"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginStart="@dimen/dimen_2x1"
    android:layout_marginEnd="@dimen/dimen_2x1"
    android:layout_marginBottom="@dimen/dimen_10x1"
    android:background="@color/white"
    android:elevation="8dp"
    android:fillViewport="true"
    android:scrollbars="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/dimen_10x1"
            android:paddingTop="@dimen/dimen_2x2"
            android:paddingBottom="@dimen/dimen_2x2"
            android:text="Suggestions"
            android:textColor="@color/charcoal_text"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tv_1_hr"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="12dp"
            android:paddingTop="@dimen/dimen_2x4"
            android:paddingBottom="@dimen/dimen_2x4"
            android:text="1 hour"
            android:textColor="@color/charcoal_text"
            android:textSize="13sp" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#F8F8F8" />

        <TextView
            android:id="@+id/tv_4_hour"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="12dp"
            android:paddingTop="@dimen/dimen_2x4"
            android:paddingBottom="@dimen/dimen_2x4"
            android:text="4 hour"
            android:textColor="@color/charcoal_text"
            android:textSize="13sp" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#F8F8F8" />

        <TextView
            android:id="@+id/tv_1_day"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="12dp"
            android:paddingTop="@dimen/dimen_2x4"
            android:paddingBottom="@dimen/dimen_2x4"
            android:text="1 day"
            android:textColor="@color/charcoal_text"
            android:textSize="13sp" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#F8F8F8" />

        <TextView
            android:id="@+id/tv_1_week"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="12dp"
            android:paddingTop="@dimen/dimen_2x4"
            android:paddingBottom="@dimen/dimen_2x4"
            android:text="1 week"
            android:textColor="@color/charcoal_text"
            android:textSize="13sp" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#F8F8F8" />


    </LinearLayout>

</ScrollView>