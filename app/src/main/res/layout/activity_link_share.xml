<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="@dimen/dimens_2x">

    <ProgressBar
        android:id="@+id/progress"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:visibility="gone" />

    <TextView
        android:id="@+id/tv_send_to"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Send to"
        android:textColor="@color/charcoal_text" />

    <EditText
        android:id="@+id/et_email_phone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_send_to"
        android:layout_marginTop="@dimen/dimen_2x4"
        android:background="@drawable/pinentry_bg"
        android:cursorVisible="true"
        android:maxLength="45"
        android:imeOptions="actionDone"
        android:padding="@dimen/dimens_2x"
        android:textSize="15sp" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/btn_send"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_10x6"
        android:layout_alignParentBottom="true"
        android:backgroundTint="@color/colorPrimary"
        android:text="Send"
        android:textAllCaps="false"
        android:textStyle="bold" />


</RelativeLayout>