<?xml version="1.0" encoding="utf-8"?>
<com.chauthai.swipereveallayout.SwipeRevealLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/srl_tickets"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:dragEdge="right"
    app:mode="normal">

    <LinearLayout
        android:id="@+id/ll_swipe_unsubscribe"
        android:layout_width="70dp"
        android:layout_height="142dp"
        android:background="#FF8B7B"
        android:gravity="center"
        android:orientation="vertical">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/ic_unsubscribe" />

    </LinearLayout>

    <RelativeLayout
        android:id="@+id/rl_ticket_holder"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:clickable="true"
        android:focusable="true"
        android:foreground="?selectableItemBackground">

        <LinearLayout
            android:id="@+id/ll_ticket_view"
            android:layout_width="65dp"
            android:layout_height="110dp"
            android:layout_marginStart="@dimen/dimens_2x"
            android:layout_marginTop="@dimen/dimens_2x"
            android:background="@drawable/blue_round_bg"
            android:orientation="vertical"
            android:paddingTop="@dimen/dimen_10x1"
            android:paddingBottom="@dimen/dimen_10x1">

            <TextView
                android:id="@+id/date1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginStart="@dimen/dimen_6x1"
                android:layout_marginEnd="@dimen/dimen_6x1"
                android:text="14"
                android:textColor="@color/white"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/date2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginStart="@dimen/dimen_6x1"
                android:layout_marginEnd="@dimen/dimen_6x1"
                android:text="Nov, 2020"
                android:textColor="@color/white"
                android:textSize="10dp" />

            <View
                android:id="@+id/v_dots"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dimen_6x1"
                android:layout_marginTop="@dimen/dimen_6x1"
                android:layout_marginBottom="@dimen/dimen_2x2"
                android:background="@drawable/dotted_line" />


            <RelativeLayout
                android:id="@+id/ll_assinged_employee_holder"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginStart="@dimen/dimen_2x2"
                android:layout_marginTop="@dimen/dimen_2x4"
                android:layout_marginEnd="@dimen/dimen_2x2"
                android:gravity="center" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="110dp"
            android:layout_marginStart="@dimen/dimen_10x1"
            android:layout_marginTop="@dimen/dimens_2x"
            android:layout_toEndOf="@+id/ll_ticket_view"
            android:gravity="center"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/tv_ticket_id_value"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="start"
                    android:gravity="bottom"
                    android:text="#124568"
                    android:textColor="@color/black"
                    android:textSize="13sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/tv_priority"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/dimen_10x1"
                    android:layout_toEndOf="@+id/tv_ticket_id_value"
                    android:drawableStart="@drawable/ic_highest_small"
                    android:drawablePadding="@dimen/dimen_2x2"
                    android:gravity="bottom"
                    android:text="Highest"
                    android:textColor="@color/black"
                    android:textSize="11sp" />


            </RelativeLayout>

            <TextView
                android:id="@+id/tv_summary"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dimen_6x1"
                android:ellipsize="end"
                android:paddingEnd="@dimen/dimen_10x2"
                android:singleLine="true"
                android:text="Broken tv, fallen from tv stand"
                android:textColor="@color/black"
                android:textSize="13sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tv_customer_value"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="start"
                android:layout_marginTop="@dimen/dimen_6x1"
                android:text="Ram prasad yadav"
                android:textColor="@color/black"
                android:textSize="13sp"
                android:textStyle="bold" />

            <HorizontalScrollView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingEnd="@dimen/dimens_2x"
                android:scrollbars="none">

                <LinearLayout
                    android:id="@+id/ll_tags"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dimen_6x1"
                    android:orientation="horizontal">

                </LinearLayout>

            </HorizontalScrollView>
        </LinearLayout>

        <TextView
            android:id="@+id/tv_ticket_status"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="@dimen/dimens_2x"
            android:layout_marginEnd="@dimen/dimen_10x2"
            android:background="@drawable/resolved_bg"
            android:paddingStart="@dimen/dimen_10x1"
            android:paddingTop="@dimen/dimen_2x2"
            android:paddingEnd="@dimen/dimen_10x1"
            android:paddingBottom="@dimen/dimen_2x2"
            android:text="Started"
            android:textAllCaps="true"
            android:textColor="#239F15"
            android:textSize="10sp" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_below="@+id/ll_ticket_view"
            android:layout_marginTop="@dimen/dimens_2x"
            android:background="#e7e7e7"
            android:paddingTop="@dimen/dimen_10x1" />
    </RelativeLayout>
</com.chauthai.swipereveallayout.SwipeRevealLayout>