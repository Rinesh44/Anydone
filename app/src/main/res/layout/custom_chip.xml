<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@drawable/chip_bg"
    android:padding="@dimen/dimen_6x1">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/civ_employee"
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:src="@drawable/ic_assigned_emp_placeholder" />

    <TextView
        android:id="@+id/tv_chip_id"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="gone" />

    <TextView
        android:id="@+id/tv_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginStart="@dimen/dimen_2x2"
        android:layout_toEndOf="@+id/civ_employee"
        android:text="random text"
        android:textColor="@color/black" />

    <ImageView
        android:id="@+id/iv_cancel"
        android:layout_width="@dimen/dimens_2x"
        android:layout_height="@dimen/dimens_2x"
        android:layout_centerVertical="true"
        android:layout_marginStart="@dimen/dimen_10x1"
        android:layout_toEndOf="@+id/tv_name"
        android:src="@drawable/ic_clear_black" />

</RelativeLayout>