<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <TextView
        android:id="@+id/tv_date_specific"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:padding="@dimen/dimen_10x1"
        android:text="@string/pick_specific_date"
        android:textAllCaps="true"
        android:textColor="@color/black"
        android:textStyle="bold" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginStart="@dimen/dimen_10x3"
        android:layout_marginEnd="@dimen/dimen_10x3"
        android:background="@color/grey" />

    <TextView
        android:id="@+id/tv_date_range"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:padding="@dimen/dimen_10x1"
        android:text="@string/pick_date_range"
        android:textAllCaps="true"
        android:textColor="@color/black"
        android:textStyle="bold" />


</LinearLayout>